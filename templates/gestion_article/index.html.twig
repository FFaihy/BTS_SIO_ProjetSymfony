{% block body %}
    <br>
    <p style="margin-left: 5%"><a href="{{ path('ajouter_article') }}" class="btn btn-light">Ajouter</a></p>
    {% for rubrique in rubriques %}
        <h3 style="text-align: center">{{rubrique.nomRubrique}}</h3>
    <Table class="table" align="center" style="margin: auto;width: 80%;">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        {% for article in rubrique.articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.nomArticle }}</td>
                    <td>{{ article.description }} </td>
                    <td><a href="{{ path('modifier_article',{'id': article.id}) }}" class="btn btn-secondary"> Modifer</a></td>
                    <td><a href="{{ path('supprimer_article',{'id': article.id}) }}" type="button" class="btn btn-secondary"> Supprimer</a></td>
                </tr>
        {% endfor %}
    </Table>
    {% endfor %}

{% endblock %}
